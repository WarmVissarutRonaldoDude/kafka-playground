{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "baseUrl": ".",
    "isolatedModules": false,
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "libTypes"]
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules"]
}
